{
  "name": "rn-placeholder",
  "version": "2.0.0",
  "private": false,
  "license": "MIT",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "homepage": "https://github.com/mfrachet/rn-placeholder",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfrachet/rn-placeholder"
  },
  "description": "Display some placeholder stuff before rendering your text or media content in React Native",
  "keywords": [
    "react-native",
    "ios",
    "android",
    "expo",
    "typescript"
  ],
  "author": "Marvin FRACHET <marvin.frachet@gmail.com> (https://github.com/mfrachet)",
  "scripts": {
    "format": "prettier-eslint --write \"src/**/*.js\" && prettier-eslint --write \"Example/components/**/*.js\"",
    "lint": "tslint --project ./tsconfig.json",
    "prepare": "bob build",
    "test": "jest --updateSnapshot",
    "test:ci": "jest --collectCoverage=true",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typescript"
    }
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "@babel/runtime": "7.4.5",
    "@react-native-community/bob": "0.5.0",
    "@types/jest": "24.0.15",
    "@types/react": "16.8.22",
    "@types/react-native": "0.57.63",
    "@types/react-test-renderer": "16.8.2",
    "babel-jest": "24.8.0",
    "coveralls": "2.13.1",
    "husky": "2.1.0",
    "jest": "24.8.0",
    "metro-react-native-babel-preset": "0.54.1",
    "react": "16.6.3",
    "react-native": "0.59.9",
    "react-test-renderer": "16.6.3",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  },
  "jest": {
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "react-native": "src/index.js",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "typescript"
    ]
  }
}
